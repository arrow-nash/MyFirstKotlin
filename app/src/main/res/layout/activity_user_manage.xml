<?xml version="1.0" encoding="utf-8"?>
<!-- RelativeLayout:要素の位置を相対的に決める -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <Button
        android:id="@+id/btn_user_show"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:text="@string/title_user_show" />
    <Button
        android:id="@+id/btn_user_add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_user_show"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/title_user_add" />
    <Button
        android:id="@+id/btn_user_delete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_user_add"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/title_user_delete" />

    <ListView
        android:id="@+id/list_user"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@+id/btn_user_delete"
        android:layout_marginTop="30dp" />

</RelativeLayout>